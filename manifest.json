{
  "manifest_version": 3,
  "name": "Gemini Style Editor",
  "version": "2.3",
  "description": "Applies custom font and change content width in Gemini chatbot  by https://github.com/amirhosseindotzip",

  "permissions": [
    "storage",       
    "activeTab",     
    "scripting"      
  ],
  "action": {
    "default_popup": "popup.html",  
    "default_icon": {
      "16": "icons/icon16.png",  
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content.js"] 
    }
  ]
}